{
  "name": "monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:ui": "turbo run test:ui",
    "test:python": "pytest packages/python-shared/tests apps/data-pipeline/tests -v",
    "test:python:watch": "pytest packages/python-shared/tests apps/data-pipeline/tests -v --watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" && black packages/python-shared/src apps/data-pipeline/src packages/python-shared/tests apps/data-pipeline/tests",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" && black --check packages/python-shared/src apps/data-pipeline/src packages/python-shared/tests apps/data-pipeline/tests",
    "typecheck": "turbo run typecheck",
    "typecheck:python": "mypy packages/python-shared/src apps/data-pipeline/src",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@turbo/gen": "^1.11.2",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "storybook": "^7.6.5",
    "turbo": "^1.11.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.py": [
      "black",
      "flake8"
    ]
  },
  "packageManager": "npm@9.8.1"
}
